{
  "name": "cms-serverless",
  "version": "1.0.0",
  "description": "Serverless Headless CMS with Cloudflare Workers",
  "main": "src/runtime/api.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build": "tsc",
    "test": "vitest",
